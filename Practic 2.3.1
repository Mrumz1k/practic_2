class Worker:
    def __init__(self, name, surname, rate, days):
        self.name = name
        self.surname = surname
        self.rate = rate
        self.days = days

    def GetSalary(self):
        return self.rate * self.days

worker = Worker("Иван", "Иванов", 1500, 20)
print(f"{worker.name} {worker.surname} заработал: {worker.GetSalary()} руб.")
