class Train:
    def __init__(self, destination, number, departure_time):
        self.destination = destination
        self.number = number
        self.departure_time = departure_time

    def show_info(self):
        print(f"Пункт назначения: {self.destination}")
        print(f"Номер поезда: {self.number}")
        print(f"Время отправления: {self.departure_time}")

trains = [
    Train("Москва", 101, "08:30"),
    Train("Санкт-Петербург", 202, "12:45"),
    Train("Казань", 303, "17:00")
]

num = int(input("Введите номер поезда: "))

for train in trains:
    if train.number == num:
        train.show_info()
        break
else:
    print("Поезд с таким номером не найден.")
